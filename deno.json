{
  "name": "@edouardmisset/utils",
  "version": "0.7.1",
  "exports": "./src/mod.ts",
  "imports": {
    "asserts": "https://deno.land/std@0.218.2/assert/mod.ts"
  },
  "tasks": {
    "check": "deno lint && deno fmt && deno test --reporter=dot --coverage",
    "docs": "deno doc --html --name='utils' ./src/mod.ts",
    "coverage:gen": "deno coverage ./coverage --lcov --output=./coverage/cov.lcov",
    "coverage:view": "deno coverage --html coverage",
    "test:watch": "deno test --watch"
  },
  "compilerOptions": {
    "strict": true,
    "useUnknownInCatchVariables": true,
    "noImplicitOverride": true
  },
  "exclude": [
    ".git",
    "coverage",
    "docs"
  ],
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "camelcase",
        "default-param-last",
        "eqeqeq",
        "explicit-function-return-type",
        "explicit-module-boundary-types",
        "no-const-assign",
        "no-eval",
        "no-implicit-declare-namespace-export",
        "no-non-null-asserted-optional-chain",
        "no-non-null-assertion",
        "no-self-compare",
        "single-var-declarator"
      ]
    },
    "include": [
      "."
    ]
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": false,
    "singleQuote": true,
    "include": [
      "."
    ]
  },
  "test": {
    "include": [
      "src"
    ],
    "exclude": [
      "src/testdata/",
      "data/fixtures/**/*.ts"
    ]
  }
}
