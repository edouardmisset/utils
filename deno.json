{
  "$schema": "https://raw.githubusercontent.com/denoland/deno/main/cli/schemas/config-file.v1.json",
  "tasks": {
    "check:exports": "deno run --allow-read --allow-write --allow-run ./_internal-tools/check-exports.ts",
    "check:imports": "deno run --allow-read ./_internal-tools/check-imports.ts",
    "check:links": "deno run --allow-read ./_internal-tools/check-links.ts",
    "check:versions": "deno run --allow-read --allow-net ./_internal-tools/check-versions.ts",
    "check:eslint": "npm run lint:eslint",
    "check": "deno lint && deno fmt && deno task typecheck && deno task docs:lint && deno task test && deno task check:eslint && deno task check:imports && deno task check:exports && deno task check:links && deno task check:versions",
    "count:functions": "deno run --allow-read ./_internal-tools/count-functions.ts",
    "coverage:gen": "deno coverage ./coverage --lcov --output=./coverage/lcov.info",
    "coverage:view": "deno coverage --html coverage",
    "docs:lint": "deno doc --lint [!_]*/*.ts",
    "docs": "deno doc --html --name='TS utils ðŸš€' ./mod.ts",
    "format": "deno fmt",
    "test:watch": "deno test --reporter=dot --watch",
    "test": "deno test --doc --reporter=dot --coverage --parallel ./**/*.ts",
    "typecheck": "deno check --doc ./**/*.ts",
    "update:std": "deno update --latest \"@std/*\""
  },
  "importMap": "./import-map.json",
  "workspace": [
    "./array",
    "./date",
    "./function",
    "./math",
    "./object",
    "./text",
    "./type"
  ],
  "compilerOptions": {
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "useUnknownInCatchVariables": true,
    "noImplicitOverride": true
  },
  "exclude": [
    ".git",
    "coverage",
    "docs"
  ],
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "camelcase",
        "default-param-last",
        "eqeqeq",
        "explicit-function-return-type",
        "explicit-module-boundary-types",
        "no-const-assign",
        "no-eval",
        "no-implicit-declare-namespace-export",
        "no-non-null-asserted-optional-chain",
        "no-non-null-assertion",
        "no-self-compare",
        "no-sync-fn-in-async-fn",
        "no-console",
        "single-var-declarator"
      ]
    },
    "include": [
      "."
    ]
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": false,
    "singleQuote": true,
    "include": [
      "."
    ],
    "proseWrap": "always"
  },
  "test": {
    "include": [
      "./**/*.test.ts"
    ],
    "exclude": [
      "_internal-tools"
    ]
  }
}
