{
  "$schema": "https://raw.githubusercontent.com/denoland/deno/main/cli/schemas/config-file.v1.json",
  "importMap": "./import-map.json",
  "tasks": {
    "check:barrels": "deno run --allow-read ./check-barrels.ts",
    "check:imports": "deno run --allow-read ./check-imports.ts",
    "check": " deno lint && deno fmt && deno task typecheck && deno task docs:lint && deno task test && deno task check:imports && deno task check:barrels",
    "coverage:gen": "deno coverage ./coverage --lcov --output=./coverage/lcov.info",
    "coverage:view": "deno coverage --html coverage",
    "docs:lint": "deno doc --lint ./**/*.ts",
    "docs": "deno doc --html --name='TS utils ðŸš€' ./mod.ts",
    "test:watch": "deno test --reporter=dot --watch",
    "test": "deno test --doc --reporter=dot --coverage --parallel ./**/*.ts",
    "typecheck": "deno check --doc ./**/*.ts"
  },
  "workspace": [
    "./array",
    "./date",
    "./function",
    "./math",
    "./object",
    "./text",
    "./type"
  ],
  "compilerOptions": {
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "useUnknownInCatchVariables": true,
    "noImplicitOverride": true
  },
  "exclude": [
    ".git",
    "coverage",
    "docs"
  ],
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "camelcase",
        "default-param-last",
        "eqeqeq",
        "explicit-function-return-type",
        "explicit-module-boundary-types",
        "no-const-assign",
        "no-eval",
        "no-implicit-declare-namespace-export",
        "no-non-null-asserted-optional-chain",
        "no-non-null-assertion",
        "no-self-compare",
        "no-sync-fn-in-async-fn",
        "no-console",
        "single-var-declarator"
      ]
    },
    "include": [
      "."
    ]
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": false,
    "singleQuote": true,
    "include": [
      "."
    ],
    "proseWrap": "always"
  },
  "test": {
    "include": [
      "./**/*.test.ts"
    ],
    "exclude": [
      "check-imports.ts",
      "check-barrels.ts"
    ]
  }
}
