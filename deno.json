{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "importMap": "./import-map.json",
  "tasks": {
    "check": "deno lint && deno fmt && deno test --reporter=dot --coverage --parallel",
    "coverage:gen": "deno coverage ./coverage --lcov --output=./coverage/lcov.info",
    "coverage:view": "deno coverage --html coverage",
    "docs:lint": "deno doc --lint ./**/*.ts",
    "docs:test": "deno test --doc ./**/*.ts",
    "docs": "deno doc --html --name='utils' ./mod.ts",
    "test:watch": "deno test --watch",
    "test": "deno test --reporter=dot --coverage --parallel"
  },
  "workspace": [
    "./array",
    "./date",
    "./function",
    "./math",
    "./object",
    "./text",
    "./tree",
    "./type"
  ],
  "compilerOptions": {
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "useUnknownInCatchVariables": true,
    "noImplicitOverride": true
  },
  "exclude": [
    ".git",
    "coverage",
    "docs"
  ],
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "camelcase",
        "default-param-last",
        "eqeqeq",
        "explicit-function-return-type",
        "explicit-module-boundary-types",
        "no-const-assign",
        "no-eval",
        "no-implicit-declare-namespace-export",
        "no-non-null-asserted-optional-chain",
        "no-non-null-assertion",
        "no-self-compare",
        "no-sync-fn-in-async-fn",
        "no-console",
        "single-var-declarator"
      ]
    },
    "include": [
      "."
    ]
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": false,
    "singleQuote": true,
    "include": [
      "."
    ],
    "proseWrap": "always"
  },
  "test": {
    "include": [
      "./**/*.test.ts"
    ]
  }
}
